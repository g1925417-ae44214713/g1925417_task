<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>


<table>
    <ul>
    <% @tasks.each do |task| %>
    <tr>
      <li>
      <%= link_to task.title, task_path(task) %>
      |<%= link_to "削除", task_path(task), method: :delete, data: { confirm: "削除してよろしいですか?" } %>
      </li>
    </tr>
    </ul>
    <% end %>
</table>

  <hr>

<h2>タスク登録</h2>

<%= render 'form', task: @task %>

